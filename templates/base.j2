{% macro social_buttons(reason) %}
<div style="height:20px">
  <a href="https://twitter.com/share"
    class="twitter-share-button"
    data-text="I am voting for Clinton on Nov 8 because {{ reason.body }}"
    data-url="{{ reason.url }}"
    data-hashtags="votecuz"
    data-show-count="true"
    >Tweet
  </a>
</div>
<div style="height:56px;">
  <div class="fb-like"
    data-href="{{ reason.url }}"
    data-layout="standard"
    data-action="like"
    data-share="true"
    data-show-faces="true">
  </div>
</div>
{% endmacro %}

