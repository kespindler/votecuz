{% extends 'index.j2' %}
{% block title %}
I'm voting for Clinton on Nov 8 because {{ reason.tagline }}
{% endblock %}
{% block reason %}

<h1>I'm voting for Clinton on Nov 8 because {{ reason.tagline }}</h1>

{% if reason.body %}
<p>{{ reason.body }}
{% endif %}
{% if reason.video %}
<center>
  <iframe width="710"
          height="400"
          src="https://www.youtube.com/embed/{{ reason.video }}"
          frameborder="0"
          allowfullscreen
          >
  </iframe>
</center>
{% if community_videos %}
<h3>Community Videos</h3>
<table border="1">
  <tr>
    <td>
      uploaded video 1
    </td>
    <td>
      uploaded video 2
    </td>
    <td>
      <a href="#">Upload Your Video</a>
    </td>
  </tr>
</table>
{% endif %}

{% endif %}

{{ social_buttons(reason) }}
{% endblock %}
