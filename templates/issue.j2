{% extends 'index.j2' %}
{% block title %}
I'm voting for Clinton on Nov 8 because {{ reason.tagline }}
{% endblock %}
{% block reason %}

<h1>I'm voting for Clinton on Nov 8 because {{ reason.tagline }}</h1>

{% if reason.body %}
<h2>{{ reason.body }}</h2>
{% endif %}
{% if reason.video %}
<center>
  <iframe id="hi"
          width="710"
          height="400"
          src="https://www.youtube.com/embed/{{ reason.video }}"
          frameborder="0"
          allowfullscreen
          >
  </iframe>
</center>
{% if community_videos %}
<h3>Community Videos</h3>
{% endif %}

{% endif %}

{{ social_buttons(reason) }}
{{ like_button(reason) }}
{% endblock %}
